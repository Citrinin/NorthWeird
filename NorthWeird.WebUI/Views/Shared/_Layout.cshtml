<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <environment include="Development">
        @*<link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/styles/styles.css" rel="stylesheet" />*@
        <link href="~/styles/styles.min.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/styles/styles.min.css" rel="stylesheet" />
    </environment>
</head>
    <body class="d-flex flex-column">
       @RenderSection("Header", false)

        @if (!IsSectionDefined("header"))
        {
            <partial name="_Header"/>
        }
        
    @await Component.InvokeAsync("Breadcrumb")

    <main role="main" class="container-fluid px-5">
            <h2 class="my-4">@ViewData["Title"]</h2>
            <div>
                @RenderBody()
            </div>
        </main>

    <footer class="footer">
        <div class="container text-muted">
            @RenderSection("footer", false)
            @if (!IsSectionDefined("footer"))
            {
                <div>
                    This is the project for <a href="https://epam.sharepoint.com/sites/ASPNetCore">mentoring program.</a>
                    Link on <a href="https://github.com/Citrinin/NorthWeird"> GitHub </a>
                </div>
            }
        </div>
    </footer>
    <environment include="Development">
        @*<script src="~/node_modules/jquery/dist/jquery.js"></script>
        <script src="~/node_modules/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/node_modules/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/js/app.js"></script>*@
        <script src="~/js/app.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/app.min.js"></script>
    </environment>
    </body>
</html>
