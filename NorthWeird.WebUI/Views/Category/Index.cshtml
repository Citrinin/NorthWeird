@using NorthWeird.WebUI.Helpers.HtmlHelpers
@model IEnumerable<NorthWeird.Application.Models.CategoryDto>

@{
    ViewData["Title"] = "Categories";
}

<div class="card-group">
    @foreach (var category in Model)
    {
        <div class="card">
            <img class="card-img-top image" src="@Url.Content($"/image/{category.CategoryId}")" alt="Category image">
            <div class="card-body">
                <a northweird-id="@category.CategoryId"><h4 class="card-title">@category.CategoryName</h4></a>
                <p class="card-text">
                    @Html.NorthWeirdImageLink(category.CategoryId, category.Description)
                </p>
            </div>
            <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-primary">Edit category</a>
        </div>
    }
</div>

@section Footer {
    <span>I'm very sorry, but you can't edit the categories :'(</span>
}