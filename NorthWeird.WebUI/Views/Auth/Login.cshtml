@using Microsoft.AspNetCore.Mvc.ModelBinding
@model NorthWeird.WebUI.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<form method="post">
    <div class="form-group">
        <div class="row">
            <label class="col-sm-2 col-form-label" asp-for="UserName"></label>
            <div class="col-sm-2">
                <input class="form-control" asp-for="UserName" />
            </div>
        </div>
        <span asp-validation-for="UserName"></span>
    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-sm-2 col-form-label" asp-for="Password"></label>
            <div class="col-sm-2">
                <input class="form-control" type="password" asp-for="Password" />
            </div>
        </div>
        <span asp-validation-for="Password"></span>
    </div>
    
    <div asp-validation-summary="All"></div>

    <input class="btn btn-primary" type="submit" name="update" value="Login" />
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Product">Cancel</a>

    <a class="btn btn-secondary" asp-action="ForgotPassword" asp-controller="Auth">Forgot Password?</a>
    <a class="btn btn-secondary" asp-action="ExternalLogin" asp-controller="Auth" asp-route-provider="OpenIdConnect">Login with Azure AD</a>
</form>